<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bg_dialog"
            android:padding="@dimen/margin_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/text_size_l"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:id="@+id/tv_title_dialog_login_required"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_required_like_title"/>
            <TextView
                android:textSize="@dimen/text_size_m"
                android:textColor="@color/cross_cancel_download"
                android:gravity="center"
                android:id="@+id/tv_msg_dialog_login_required"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_l"
                android:layout_marginBottom="@dimen/margin_l"
                android:text="@string/login_required_like_msg"
                android:layout_marginVertical="@dimen/margin_l"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_login_dialog_login_required"
                android:text="@string/title_login"
                style="@style/DialogButtonsStyle"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_close_dialog_login_required"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@string/close"
        android:layout_alignParentEnd="true"
        android:elevation="@dimen/button_elevation"
        app:srcCompat="@drawable/vector_cross_close_popup"/>
</RelativeLayout>
