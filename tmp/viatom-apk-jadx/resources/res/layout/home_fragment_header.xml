<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/text_size_l"
        android:textColor="@color/text_primary"
        android:ellipsize="end"
        android:id="@+id/tv_title_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_m"
        android:layout_marginTop="@dimen/margin_m"
        android:layout_marginRight="@dimen/margin_m"
        android:maxLines="1"
        android:layout_marginHorizontal="@dimen/margin_m"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_home_features"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_title_header"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/cd_featured_app"
        android:nestedScrollingEnabled="false"/>
    <HorizontalScrollView
        android:id="@+id/hsv_categories"
        android:scrollbars="none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_l"
        android:layout_marginBottom="@dimen/margin_m"
        android:layout_below="@+id/rv_home_features"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </HorizontalScrollView>
</RelativeLayout>
